<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonOrange">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@drawable/rounded_corners</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:textAllCaps">false</item>

    </style>

    <style name="ButtonOrangeSmall">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@drawable/rounded_corners</item>
        <item name="android:paddingHorizontal">3dp</item>
        <item name="android:paddingVertical">3dp</item>
        <item name="android:textAllCaps">false</item>

    </style>

    <style name="ButtonAddNotification">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@drawable/enabled_disabled_btn</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="android:paddingHorizontal">10dp</item>

    </style>

    <style name="ButtonSecondary">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingVertical">14dp</item>

    </style>

    <style name="EdittextStyleWithDescription" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">30dp</item>
        <item name="android:paddingVertical">16dp</item>
        <item name="android:background">@drawable/corners_for_et</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:drawableTint">@color/light_gray</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLength">28</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="toolbar_style_white_text" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>

    </style>
</resources>